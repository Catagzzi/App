<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="170dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/layout1">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#E2E2E2"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/usuario" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Usuario 1" />

        <EditText
            android:id="@+id/analysis1EditPersonName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingrese nombre del usuario"
            android:inputType="textPersonName" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/warning"
            android:ems="10"/>

        <TextView
            android:id="@+id/textViewInstructionMeasure"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/instructions"
            android:text="TextView" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <Button
            android:id="@+id/buttonMeasure"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Medir!"
            android:theme="@style/AppTheme.Button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/imageWaiting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/waiting" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

